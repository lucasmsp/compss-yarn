<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ResourcesList>

	<CloudProvider Name="YarnCluster">
		<Endpoint>
			<Server>yarn://192.168.0.15</Server>
			<ConnectorJar>yarn-conn.jar</ConnectorJar>
			<ConnectorClass>br.ufmg.dcc.conn.yarn.Yarn</ConnectorClass>
		</Endpoint>

		<Images>
			<Image Name="lucasmsp/compss2.6:latest">
				<CreationTime>1800</CreationTime>
				<Adaptors>
					<Adaptor Name="es.bsc.compss.nio.master.NIOAdaptor">
						<SubmissionSystem>
							<Interactive />
						</SubmissionSystem>
						<Ports>
							<MinPort>43001</MinPort>
                            <MaxPort>43005</MaxPort>
						</Ports>
					</Adaptor>
					<Adaptor Name="es.bsc.compss.gat.master.GATAdaptor">
						<SubmissionSystem>
							<Batch>
								<Queue>sequential</Queue>
								 <Queue>training</Queue>
							</Batch>
							<Interactive />
						</SubmissionSystem>
						<BrokerAdaptor>sshtrilead</BrokerAdaptor>
					</Adaptor>
				</Adaptors>
			</Image>
		</Images>

		<InstanceTypes>
			<InstanceType Name="small">		
				<Processor Name="P1">
                    <ComputingUnits>1</ComputingUnits>
                    <Type>CPU</Type>
                </Processor>
				<Memory>
					<Size>0.5</Size>
				</Memory>
				<Storage>
					<Size>0.5</Size>
				</Storage>
				<Price>
					<TimeUnit>1</TimeUnit>
					<PricePerUnit>0.085</PricePerUnit>
				</Price>
			</InstanceType>

		</InstanceTypes>
	</CloudProvider>

</ResourcesList>
